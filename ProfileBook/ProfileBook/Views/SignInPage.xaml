<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             xmlns:resource="clr-namespace:ProfileBook.Resources;assembly=ProfileBook"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ProfileBook.Views.SignInPage"
             Title="{Binding Title}">

    <StackLayout Padding="40">
        <StackLayout VerticalOptions="CenterAndExpand">
            <Entry Text="{Binding Login}"
                   Placeholder="{x:Static resource:Resource.LoginPlaceholder}" />
            <Entry Text="{Binding Password}"
                   Placeholder="{x:Static resource:Resource.PasswordPlaceholder}"
                   IsPassword="True" />
        </StackLayout>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Button Command="{Binding SignInCommand}"
                    IsEnabled="{Binding IsButtonEnabled}"
                    Text="{x:Static resource:Resource.SignInButton}"
                    BackgroundColor="DarkOrange"
                    BorderColor="Black"
                    BorderWidth="1"
            />
            <Label HorizontalOptions="CenterAndExpand"
                   Margin="10"
                   Text="{x:Static resource:Resource.SignUpLink}"
                   TextDecorations="Underline"
                   TextColor="Blue">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateCommand}"/>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </StackLayout>

</ContentPage>